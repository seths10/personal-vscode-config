{
  //    open json editor for settings
  "workbench.settings.editor": "json",
  "workbench.experimental.enableNewProfilesUI": true,
  "scm.experimental.showHistoryGraph": false,
  "debug.inlineValues": "on",

  // Change font
  "editor.fontFamily": "Cascadia Code",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",

  //   // Font size
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,

  //   // GitF
  "git.autofetch": true,
  "git.confirmSync": false,

  // ui
  "editor.minimap.enabled": true,
  "editor.scrollbar.vertical": "auto",
  "window.titleBarStyle": "custom",
  "editor.scrollbar.horizontal": "auto",

  // APC
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": false,
    "itemSize": 28
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 22,
    "fontSize": 11
  },
  "apc.stylesheet": {
    // "*": "font-family: Dank mono;",
    // ".sidebar > .composite": "height: 12px !important",
    // ".title-label": "display: none !important",
    // ".title-actions": "display: none !important",
    // ".tabs-and-actions-container > .editor-actions": "display: none !important",
    // ".titlebar-center": "display: none !important",
    // ".titlebar-right": "display: none !important",
    // ".titlebar-left": "display: none !important",
    // ".inline-tabs-placeholder": "display: none !important",
    ".split-view-view .visible": "background-color: #1e1f2b !important",
    ".has-composite-bar": "background: #1e1f2b !important",
    ".pane-body": "padding: 0 10px !important"
  },

  // Differentiate between files of same name (Next.js)
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.tsx": "${dirname} - page.tsx",
    "**/app/**/layout.tsx": "${dirname} - layout.tsx",
  },

  // Disable github graph
  "scm.showHistoryGraph": false,

  // Editor
  "workbench.startupEditor": "none",
  "editor.stickyScroll.enabled": false,
  "editor.accessibilitySupport": "off",
  "breadcrumbs.filePath": "on",
  "breadcrumbs.enabled": true,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "moxer-icons",
  "workbench.colorTheme": "Monokai Pro (Filter Octagon)",
  "editor.linkedEditing": true,
  "indentRainbow.indicatorStyle": "light",
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "workbench.settings.applyToAllProfiles": ["files.autoSave"],
  "workbench.activityBar.location": "top",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tokenColorCustomizations": {
    "[Monokai Pro (Filter Octagon)]": {
      "keywords": "#7ea4df",
      "functions": "#71ddf0",
      // "types": "#1fa8d8",
      // "comments": "#727272",
      "strings": "#29a792",
      "textMateRules": [
        {
          "scope": "comment",
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": "entity.name.tag",
          "settings": {
            "foreground": "#29a79d"
          }
        },
        {
          "scope": ["keyword.operator"],
          "settings": {
            "foreground": "#7ea4df"
          }
        }
      ]
    }
  },
  "cSpell.language": "en,lorem,en-GB,en-US",
  "cSpell.enableFiletypes": ["!postgres"],
  "workbench.editor.alwaysShowEditorActions": true,
  "files.autoSave": "afterDelay",
  "workbench.colorCustomizations": {
    "[Monokai Pro (Filter Octagon)]": {
      "terminal.background": "#1e1f2b",
      "terminal.foreground": "#1e1f2b",
      "terminal.border": "#2f303a",
      "terminalCursor.foreground": "#8d8d8d",
      // "tab.activeBackground": "#1e1f2b",
      "activityBar.background": "#1e1f2b",
      "statusBar.foreground": "#b3aaaa"
    }
  },

  // Terminal
  "terminal.integrated.tabStopWidth": 4,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorStyleInactive": "underline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "icon": "terminal-bash",
      "source": "Git Bash"
    }
  },

  // Languages
  "typescript.updateImportsOnFileMove.enabled": "always",
  "markdown.preview.fontSize": 10,
  "tailwindCSS.rootFontSize": 10,
  "emmet.excludeLanguages": [],
  "emmet.includeLanguages": {
    "mdx": "html"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Other
  "liveServer.settings.donotShowInfoMsg": true,
  "svg.preview.mode": "svg",

  //  GitHub & Git
  "github.copilot.enable": {
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.advanced": {},
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.editor.enableAutoCompletions": false,
  "git.openRepositoryInParentFolders": "never",

  // Prettier Config
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "gitlens.launchpad.indicator.enabled": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "githubPullRequests.pullBranch": "never",
  "supermaven.otherWarning": false,
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "vim.enableNeovim": true,
  "vim.neovimPath": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "update.mode": "manual",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "makefile.configureOnOpen": true,

  // Neovim


  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "git.enableSmartCommit": true
}
